@model BolgMVC.Web.Models.Auth.LoginViewmodel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<form method="post" asp-controller="Auth" asp-action="Login">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName" />
        <span asp-validation-for="UserName" style="color: red"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
       @* <a href="/Auth/Register">ثبت نام</a>*@
    </div>
</form>
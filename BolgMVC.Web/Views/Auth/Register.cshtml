@model BolgMVC.Web.Models.Auth.RegisterViewModel

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "ثبت نام";
}
<form method="post" asp-controller="Auth" asp-action="Register">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" asp-for="UserName" />
        <br />
        <span asp-validation-for="UserName"style="color: red"></span>
    </div>
    <div>
        <input type="text" placeholder="نام و نام خانوادگی" asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" value="ثبت نام" />
        <a href="/Auth/Login">ورود</a>
    </div>
</form>